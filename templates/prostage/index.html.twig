{% extends 'base.html.twig' %}

{% block body %}

{% block header %}
        <h1>Prostage</h1>
        <ul>
           <li><a href={{path('prostage_accueil')}}>Accueil</a></li>
           <li><a href={{path('entreprises')}}>Entreprises</a></li>
           <li><a href={{path('formations')}}>Formations</a></li>
        </ul>
{% endblock %}

<h2>Liste des stages</h2>
<div class= "listeStages">
  {% for stage in stages %}

  <div class="stageCourant-body">
     <h5 class="stageCourant-titre">{{stage.titre}}</div>
     <h5 class="stageCourant-email">{{stage.email}}</div>
  </div>
  <div class= "lienStage">
    <a href={{path('stages-id',{id:stage.id})}}>En savoir plus</a>
  </div>

  </div>
  <br>
  <br>
  {% endfor %}

</div>

{% endblock %}